<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etInputIp"
        android:text="192.168.31.188"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/etInputPort"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="52381"
        android:layout_below="@+id/etInputIp" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etInputPort"
        android:text="连接" />

    <View
        android:id="@+id/viewCenter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btnTurnTop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/viewCenter"
        android:layout_alignStart="@+id/viewCenter"
        android:layout_alignEnd="@+id/viewCenter"
        android:text="上" />

    <Button
        android:id="@+id/btnTurnBottom"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/viewCenter"
        android:layout_alignStart="@+id/viewCenter"
        android:layout_alignEnd="@+id/viewCenter"
        android:text="下" />

    <Button
        android:id="@+id/btnTurnLeft"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/viewCenter"
        android:layout_alignBottom="@+id/viewCenter"
        android:layout_toLeftOf="@+id/viewCenter"
        android:text="左" />

    <Button
        android:id="@+id/btnTurnRight"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/viewCenter"
        android:layout_alignBottom="@+id/viewCenter"
        android:layout_toEndOf="@+id/viewCenter"
        android:text="右" />

</RelativeLayout>