<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etInputIp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="192.168.31.188" />

    <EditText
        android:id="@+id/etInputPort"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etInputIp"
        android:text="52381" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etInputPort"
        android:text="连接" />

    <androidjni.example.com.viscaandroid.visca.ControllerView
        android:id="@+id/controllerView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true" />


</RelativeLayout>